<MyApp>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: my_label
            text: "Hello, Kivy!"
            font_size: '24sp'
        Button:
            text: "Click Me!"
            size_hint_y: None
            height: '50dp'
            on_press:
                my_label.text = "Button Clicked!"
